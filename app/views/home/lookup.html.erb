<h2 style="text-align: center"><em>Crypto Currency Look Up</em></h2>
<br />
<br />
	
<%= form_tag home_lookup_path, :method => 'POST', id: 'lookup', class: "form-inline" do	%>
    <div class="form-gourp">    	
		<%= text_field_tag 'id', nil, placeholder: 'Enter Crypto Symbol', size: 50, class: "form-control" %>
		<%= submit_tag 'Lookup Stock Quote', class:"btn btn-info form-control" %>
    </div>
<% end %>


<br /><br />
<% if @symbol %>
	<% for x in @lookup_coin %>
		<% if @symbol == x['symbol'] %>
		  <% @result.push(x) %>
			<div class="panel panel-default">
			  <div class="panel-heading">
			    <h3 class="panel-title"><%= x['name'] %></h3>
			  </div>
			  <div class="panel-body">
				Rank: <%= x['rank'] %><br />
				Price: $ 
				<%= x['price_usd']%><br /><br />			  
			  </div>
			  <div class="panel-footer"></div>
			</div>
	    <% end %>
	<% end %>

    <% if @symbol == '' %>
	    <% @symbol = 'Hey You Forgot to Enter A Currency!' %>
	    <p style='color: red'><%= @symbol %></p>
	<% elsif @result.length == 0 %>
      <p style='color: red'>Ops, the crypto you search doesn't exist!</p>
	<% end %>
<% end %>	


