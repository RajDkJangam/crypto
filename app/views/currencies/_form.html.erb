<%= form_with(model: currency, local: true, :html => {:class => "form-horizontal"}) do |form| %>
  <% if currency.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(currency.errors.count, "error") %> prohibited this currency from being saved:</h2>

      <ul>
      <% currency.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">  
    <div class="field">
      <%= form.label :symbol, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.text_field :symbol, id: :currency_symbol, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="field">
    <%= form.number_field :user_id, id: :currency_user_id, value: current_user.id, type: "hidden" %>
  </div>

  <div class="form-group">   
    <div class="field">
      <%= form.label :cost_per, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.text_field :cost_per, id: :currency_cost_per, class: "form-control" %>
      </div>
    </div>
  </div>
  
  <div class="form-group">    
    <div class="field">
      <%= form.label :amount_owned, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.text_field :amount_owned, id: :currency_amount_owned, class: "form-control" %>
      </div>
    </div>
  </div>

<div>  
  <div class="col-sm-2" style="text-align: right">  
    <%= link_to 'Back', currencies_path, class: "btn btn-primary" %>
  </div>

  <div class="actions col-sm-10">
    <%= form.submit class: "btn btn-block btn-success" %>
  </div>
</div>
<% end %>
